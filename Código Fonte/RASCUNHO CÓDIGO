public class Caixa {

    public static void cobrar(MaquinaLavar maquina, int matricula) {
        double valor = maquina.getPreco();
        System.out.println("Matrícula: " + matricula);
        System.out.println("Total a pagar: R$ " + String.format("%.2f", valor));
    }
}


